// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3 Tensorflow 2.11",
	"image": "nvcr.io/nvidia/tensorflow:23.01-tf2-py3",
	// "image": "nvidia_tensorflow",
	"features": { },
	"runArgs": ["--gpus", "all","-e", "DISPLAY=172.31.240.1:0.0", "--network=host", "--ipc=host", "-v", "/tmp/.X11-unix:/tmp/.X11-unix", 
				"--ulimit", "memlock=-1", "--ulimit", "stack=67108864"],
	// "build": { 
    //     "context": "..",
    //     "dockerfile": "Dockerfile",
    //     "args": {
    //         "NODE_VERSION": "none"
    //     }

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": ["8080:80"],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sh postCreateCommand.sh",		"customizations": {
		"vscode": {
			"extensions": [
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-slideshow",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.jupyter-renderers",
				"VisualStudioExptTeam.vscodeintellicode",
				"ms-python.python",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.vscode-jupyter-powertoys",
				"yy0931.mplstyle"
			]
		}
	},
	"containerEnv": {
        "DISPLAY": "${DISPLAY}"
    },
	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
